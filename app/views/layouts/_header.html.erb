<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("logo.sample_app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home_text"), root_path %></li>
        <li><%= link_to t("nav.about"), about_path %></li>
        <li><%= link_to t("help_text"), help_path %></li>
        <li><%= link_to t("nav.contact"), contact_path %></li>
        <% if logged_in? %>
        <li><%= link_to t("nav.users"), "#" %></li>
        <li class="dropdown">
          <%= link_to t("nav.account", cr: "caret").html_safe, "#",
            class: "dropdown-toggle", "data-toggle": "dropdown" %>
          <ul class="dropdown-menu">
            <li><%= link_to t("nav.profile"), current_user %></li>
            <li><%= link_to t("nav.setings"), "#" %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to t("nav.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
