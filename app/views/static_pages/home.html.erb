<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "home.micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t "home.welcome" %></h1>
  <h2>
    <%= t "home.intro" %>
    <%= link_to t("ror_tut"), t("url.railstutorial") %>
    <%= t "home.sample_app" %>.
  </h2>
  <%= link_to t("home.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("tn.jpg", alt: t("home.img_alt"), id: "tn"),
  t("url.rubyonrails") %>
<% end %>
